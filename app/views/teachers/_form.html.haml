= form_for @teacher do |f|
  - if @teacher.errors.any?
    #error_explanation
      %h2= "#{pluralize(@teacher.errors.count, "error")} prohibited this teacher from being saved:"
      %ul
        - @teacher.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :given_name
    = f.text_field :given_name
  .field
    = f.label :family_name
    = f.text_field :family_name
  .field
    = f.label :birth_date
    = f.date_select :birth_date
  .field
    = f.label :sex
    = f.check_box :sex
  .field
    = f.label :nationality
    = f.number_field :nationality
  .field
    = f.label :comment
    = f.text_area :comment
  .field
    = f.label :avatar
    = f.file_field :avatar
  .actions
    = f.submit 'Save'
