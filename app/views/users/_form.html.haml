= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :given_name
    = f.text_field :given_name
  .field
    = f.label :family_name
    = f.text_field :family_name
  .field
    = f.label :birthdate
    = f.date_select :birthdate
  .field
    = f.label :sex
    = f.check_box :sex
  .actions
    = f.submit 'Save'
